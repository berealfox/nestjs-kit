{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "moduleResolution": "node",
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": ".",
    "typeRoots": [
      "node_modules/@types",
      "test/*"
    ]
  },
  "include": [
    "src/**/*",
    "index.js",
    "test/typings.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
