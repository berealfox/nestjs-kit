{
  "name": "app-backend",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "8.11.1",
    "npm": "5.6.x"
  },
  "scripts": {
    "precommit": "npm run lint",
    "lint": "tslint -c ./tslint.json -p ./tsconfig.json",
    "start": "node index.js",
    "test": "cross-env NODE_ENV=test jest --verbose --config test/jest.config.json",
    "test:watch": "npm test -- --watch",
    "start:watch": "nodemon",
    "start:prod": "tsc && node dist/src/main.js",
    "start:docker": "docker-compose up --build",
    "deploy:build": "chmod +x ./scripts/deploy-image.sh && ./scripts/deploy-image.sh",
    "deploy:launch": "chmod +x ./scripts/deploy-launch.sh && ./scripts/deploy-launch.sh",
    "deploy:prod": "npm run deploy:build && npm run deploy:launch"
  },
  "dependencies": {
    "@nestjs/common": "^4.5.9",
    "@nestjs/core": "^4.5.10",
    "@nestjs/testing": "^4.5.5",
    "aws-sdk": "^2.276.1",
    "bcrypt": "^2.0.1",
    "bluebird-global": "^1.0.1",
    "cls-bluebird": "^2.1.0",
    "continuation-local-storage": "^3.2.1",
    "generate-password": "^1.4.0",
    "helmet": "^3.12.1",
    "html-pdf": "^2.2.0",
    "jsonwebtoken": "^8.2.1",
    "lodash": "^4.17.5",
    "mailgun-js": "^0.18.0",
    "moment": "^2.22.1",
    "mysql2": "^1.5.3",
    "nconf": "^0.10.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "pg": "^7.4.1",
    "pino": "^5.0.1",
    "pino-cloudwatch": "^0.2.1",
    "pino-pretty": "^2.0.1",
    "reflect-metadata": "0.1.10",
    "rxjs": "^5.5.6",
    "sequelize": "^4.37.4",
    "sequelize-typescript": "^0.6.3",
    "ts-node": "^4.1.0",
    "typescript": "^2.6.2",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/bluebird-global": "^3.5.5",
    "@types/helmet": "0.0.38",
    "@types/html-pdf": "^2.1.2",
    "@types/jest": "^22.2.3",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/nconf": "0.0.37",
    "@types/node": "^9.3.0",
    "@types/passport-jwt": "^3.0.1",
    "@types/pino": "^4.16.1",
    "cross-env": "^5.1.4",
    "jest": "^22.4.3",
    "nodemon": "^1.14.1",
    "ts-jest": "^22.4.4",
    "tslint": "5.3.2"
  },
  "main": "dist/main.js",
  "license": "MIT"
}
